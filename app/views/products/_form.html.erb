<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "erro") %> impediu este produto de ser salvo:</h2>
      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, "Descrição" %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :value, "Valor" %><br>
    <%= form.number_field :value, step: 0.01 %>
  </div>

  <div>
    <%= form.label :stock_amount, "Quantidade em Estoque" %><br>
    <%= form.number_field :stock_amount %>
  </div>

  <div>
    <%= form.submit "Salvar Produto" %>
  </div>
<% end %>